{
	"compilerOptions": {
	  "target": "es5",
	  "module": "commonjs",
	  "lib":  ["es2017", "es7", "es6", "dom"],
	  "outDir": "lib",
	  "rootDir": "src",
	  "strict": true,
	  "allowSyntheticDefaultImports": true,
	  "esModuleInterop": true,
	  "resolveJsonModule": true,
	  "importHelpers": true,
	  "removeComments": true,
	  "strictNullChecks": true
	},
	"exclude": [
	  "node_modules",
	  "lib",
	  "test",
	  "templates"
	]
  }